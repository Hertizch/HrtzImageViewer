<Application x:Class="HrtzImageViewer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:HrtzImageViewer.ViewModels"
             Startup="App_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/WindowStyle.xaml" />
                <ResourceDictionary Source="Styles/ButtonStyle.xaml" />
                <ResourceDictionary Source="Styles/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <viewModels:ShellVm x:Key="ShellVm" />
            <viewModels:CurrentImageVm x:Key="CurrentImageVm" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
